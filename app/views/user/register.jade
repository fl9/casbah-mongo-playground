.container(style='padding-top: 50px; width: 400px;')
  form(action='/user/new' method='POST' enctype='application/x-www-form-urlencoded')
    .form-group
      label Email
      input(type='email' name='email' tabindex='1' required='required' class='form-control')
    
    .form-group
      label Password
      input(type='password' name='password' tabindex='2' required='required' class='form-control')

    .form-group
      input(type='submit' value='Register' class='btn btn-default btn-sm')
    
